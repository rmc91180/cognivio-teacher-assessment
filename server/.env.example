# Server Configuration
PORT=8000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=teacher_assessment
DB_USER=postgres
DB_PASSWORD=postgres

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Session Configuration (for OAuth state management)
SESSION_SECRET=your-session-secret-change-in-production

# CORS
CORS_ORIGIN=http://localhost:5173

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:5173

# ===========================================
# SSO Configuration
# ===========================================

# Google OAuth 2.0
# Create credentials at: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:8000/api/auth/google/callback

# Microsoft OAuth 2.0
# Create credentials at: https://portal.azure.com/
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_CALLBACK_URL=http://localhost:8000/api/auth/microsoft/callback
MICROSOFT_TENANT=common

# ===========================================
# AI Video Analysis Configuration
# ===========================================

# OpenAI API Key (for GPT-4o Vision)
OPENAI_API_KEY=sk-your-openai-api-key

# AI Model Settings
AI_MODEL=gpt-4o
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.3
AI_DAILY_BUDGET_USD=20

# Video Processing Settings (Quality First)
MAX_FRAMES_PER_VIDEO=20
FRAME_RESOLUTION=1280x720
FRAME_QUALITY=85

# Worker Configuration
WORKER_POLL_INTERVAL_MS=10000
WORKER_MAX_CONCURRENT=3
WORKER_MAX_RETRIES=3

# ===========================================
# External Integrations (Optional)
# ===========================================

# Gradebook Integration
GRADEBOOK_API_URL=stub
GRADEBOOK_API_KEY=stub-key
